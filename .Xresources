!! Remember to reload config with `xrdb -load ~/.Xresources`

URxvt.perl-lib:                    /usr/lib/urxvt/perl/
URxvt.perl-ext:                    default,matcher,tabbedex
URxvt.perl-ext-common:             default,matcher,tabbedex,selection-to-clipboard
URxvt.tabbedex.new-button:         false
URxvt.keysym.Control-t:            perl:tabbedex:new_tab
URxvt.keysym.Control-Tab:          tabbedex:next_tab
URxvt.keysym.Control-ISO_Left_Tab: tabbedex:prev_tab
URxvt.tabbedex.no-tabbedex-keys:   true
URxvt.tabbedex.reopen-on-close:    false
URxvt.keysym.Control-Shift-R:      perl:tabbedex:rename_tab
URxvt.url-launcher:                firefox
URxvt.underlineURLs:               true
URxvt.keysym.C-M-c:                builtin-string:
URxvt.keysym.C-M-v:                builtin-string:

! WINDOW

URxvt.scrollBar: false

! TEXT

URxvt*font: xft:Hack-Regular:size=8
URxvt*boldFont: xft:Hack-Bold:size=8
URxvt*italicFont: xft:Hack-Italic:size=8
URxvt*boldItalicFont: xft:Hack-BoldItalic:size=8
URxvt*letterSpace: -1.5

! COPY & PASTE

URxvt.keysym.Shift-Control-V: eval:paste_clipboard
URxvt.keysym.Shift-Control-C: eval:selection_to_clipboard

!! Colorscheme

! special
*.foreground:   #c5c8c6
*.background:   #1d1f21
*.cursorColor:  #c5c8c6

